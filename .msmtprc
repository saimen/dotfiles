#
# Accounts will inherit settings from this section
defaults
auth             	on
tls	             	on
tls_trust_file		/etc/ssl/certs/ca-certificates.crt

# A first gmail address
account			gmail
host		    	smtp.gmail.com
port		    	587
from		    	<MailAddress>
user		    	<MailAddress>
passwordeval		pass Email/gmail.com

# A gmx address
account			gmx
host			mail.gmx.net
port			587
from			<MailAddress2>
user			<MailAddress2>
passwordeval		pass Email/gmx.de

# Set a default account
account default : gmail
